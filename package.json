{
  "name": "monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "serve": "http-server ./storybook-static",
    "lint": "eslint --ext .ts,.tsx",
    "lint:fix": "eslint --fix --ext .ts,.tsx",
    "format": "prettier --write",
    "test": "npm run test --workspaces",
    "build:package": "npm run build:package --workspaces",
    "clean": "npm run clean:build && npm run clean:storybook",
    "clean:build": "npm run clean:build --workspaces",
    "clean:storybook": "rimraf ./storybook-static"
  },
  "author": {
    "name": "mimoz",
    "email": "contact.m1m0zzz@gmail.com"
  },
  "license": "UNLICENSED",
  "workspaces": [
    "packages/react",
    "packages/web-components"
  ],
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@eslint/js": "^9.9.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-onboarding": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-unused-imports": "^4.1.3",
    "http-server": "^14.1.1",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.20.0",
    "rollup-plugin-dts": "^6.1.1",
    "storybook": "^8.2.9",
    "ts-jest": "^29.2.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "npm run format",
      "npm run lint:fix"
    ]
  }
}
